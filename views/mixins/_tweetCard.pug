mixin nweetCard(nweet={})
	.nweet_card.nweet_hover
		.nweet_avatar
			a(href=`/${nweet.author.username}`)
				img(src=`/uploads/${nweet.author.avatar || 'no-avatar.jpg'}`)
		.nweet_text
			p.author_name
				a(href=`/${nweet.author.username}`)
					strong #{nweet.author.name || nweet.author.username}
				span  @#{nweet.author.username}
			a(href=`/nweet/${nweet._id}` style="text-decoration:none; color: #000")
				div
					p.the_nweet #{nweet.nweet}
			p.nweet_actions
				//- if user
